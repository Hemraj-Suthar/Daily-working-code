        </div>
    </div>
    {% schema %}
      {
        "name": "CT Auto Slider",
        "settings": [
          {
            "type": "color",
            "id": "bg-color",
            "label": "Background Color"
          },
          {
            "type": "color",
            "id": "text-color",
            "label": "Text Color"
          },
          {
            "type": "select",
            "id": "moving_direction",
            "label": "Moving Direction",
            "options": [
              {
                "value": "ct-slide-left",
                "label": "Right to Left"
              },
              {
                "value": "ct-slide-right",
                "label": "Left to Right"
              }
            ],
            "default": "ct-slide-left"
          },
          {
            "type": "range",
            "id": "time",
            "min": 10,
            "max": 100,
            "step": 2,
            "unit": "ms",
            "label": "Auto Slider Time",
            "default": 40
          }
        ],
        "blocks": [
          {
            "type": "Slider",
            "name": "Slider",
            "settings": [
              {
                "type": "text",
                "id": "title",
                "label": "Title"
              }
            ]
          }
        ],
        "presets": [{
          "name": "CT Auto Slider"
        }]
      }
    {% endschema %}