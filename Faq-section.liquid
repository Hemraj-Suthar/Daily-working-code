{% stylesheet %}
  .ct-faq-main {
    width: 100%;
    background: #faf7e6;
    padding: 36px 0 50px 0;
  }
  .ct-faq-inner {
    width: 100%;
    max-width: 981px;
    margin: 0 auto;
  }
  .ct-faq-mainTitle {
    color: #263537;
    text-align: center;
    font-size: 20px;
    font-weight: 700;
    line-height: 30px;
    text-transform: capitalize;
  }
  .ct-faq-mainSubtitle p {
    margin-block-start: 4px;
  }
  .ct-faq-mainSubtitle {
    color: #263537;
    font-size: 14px;
    font-weight: 400;
    line-height: 21px;
    text-align: center;
  }
  .ct-faq-container {
    width: 100%;
    display: flex;
    justify-content: space-between;
    margin-top: 33px;
  }
  .ct-faq-headding-box {
    height: max-content;
    border-left: 1px solid #ccc;
  }
  .faq_headding {
    cursor: pointer;
    padding: 6px 11px;
    color: #263537;
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
  }
  .faq_headding ct_active {
    border-left: 2px solid #0b879c;
    font-weight: 700;
  }
  .ct--faq-container-headding3 {
    margin-bottom: 0px;
  }
  .ct-faq-container-title {
    width: 100%;
    max-width: 668px;
    display: none;
  }
  .ct-faq-container-title.ct_active {
    display: block;
  }
  .ct--faq-container-title {
    width: 668px;
    padding: 12px 0 11px 20px;
    background: #e1d48b;
    color: #263537;
    font-size: 18px;
    font-weight: 500;
    line-height: 27px;
  }
  .ct-faq-container-options {
    width: 100%;
  }
  .ct--faq-potions-main:first-child {
    border-top: none;
  }
  .ct--faq-potions-main {
    padding: 20px 24px;
    border-bottom: 0.8px solid rgba(26, 26, 26, 0.15);
  }
  .ct--faq-potions-main.active svg {
    transform: rotate(45deg);
  }
  .ct--faq-potions-title {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
  }
  .ct--faq-potions,
  .ct-faq-answer {
    color: #263537;
    font-size: 14px;
    font-weight: 400;
    line-height: 21px;
  }
  .ct-faq-answer {
    height: 0;
    overflow: hidden;
    transition: all 0.2s ease-out;
  }
  .ct-faq-answer a {
    color: #1a1a1a;
  }
  .ct--faq-potions-main.active .ct-faq-answer {
    height: auto;
    line-height: normal;
    margin-block-start: 10px;
  }
  .ct-faq-headding-box .faq_headding1,
  .ct-faq-headding-box .faq_headding2,
  .ct-faq-headding-box .faq_headding3,
  .ct-faq-headding-box .faq_headding4,
  .ct-faq-headding-box .faq_headding5,
  .ct-faq-headding-box .faq_headding6,
  .ct-faq-headding-box .faq_headding7,
  .ct-faq-headding-box .faq_headding8 {
    display: block;
  }
  .faq_headding2,
  .faq_headding3,
  .faq_headding4 {
    display: none;
  }

  @media screen and (max-width: 989px) {
    .ct-faq-container-title {
      max-width: 100%;
    }
    .ct--faq-container-title {
      width: auto;
    }
    .ct-faq-container-main {
      justify-content: center;
    }
    .ct--faq-potions-title {
      gap: 40px;
    }
  }
  @media screen and (max-width: 768px) {
    .ct-faq-main {
      padding: 30px 16px 50px 16px !important;
    }
    .ct-faq-container-main {
      margin-top: 0px;
    }
    .ct-faq-mainSubtitle {
      font-size: 14px;
      margin: 1px 0 0 0;
    }
    .ct-faq-mainSubtitle p {
      margin: 0;
    }
    .ct-faq-container {
      margin-top: 20px;
    }
    .ct-faq-headding-box {
      display: none;
    }
    .ct-faq-container-main .ct-faq-box {
      width: 100%;
    }
    .ct-faq-container-title {
      display: block;
    }
    .ct-faq-container-options {
      height: 0;
      overflow: hidden;
      transition: all 0.2s ease-out;
    }
    .ct-faq-container-title.active .ct-faq-container-options {
      height: auto;
      line-height: normal;
      margin-block-start: 10px;
    }
    .ct--faq-container-title {
      padding: 11px 0 12px 14px;
      font-size: 16px;
      line-height: 24px;
      margin-top: 30px;
    }
    .ct-faq-container-title:first-of-type .ct--faq-container-title {
      margin-top: 0px;
    }
    .ct--faq-potions-main {
      padding: 9px 2px 16px 0px;
    }
    .ct--faq-potions-title svg {
      width: 8px;
      height: 8px;
    }
    #shopify-section-template--20240771187013__3861ebf9-4754-4635-a507-9b401a844586 .ct-faq-main {
      padding-block-start: 60px !important;
    }
  }
{% endstylesheet %}
