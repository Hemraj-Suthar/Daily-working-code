{{ 'CT-FAQ-section.css' | asset_url | stylesheet_tag }}

<div id="ct_faq" class="ct-faq-main for_JS">
  <div class="ct-faq-inner">
    <div class="ct-faq-mainTitle">{{ section.settings.mainTitle }}</div>
    <div class="ct-faq-mainSubtitle">{{ section.settings.mainSubtitle }}</div>
    <div class="ct-faq-container">
      <div class="ct-faq-headding-box">
        {% if section.settings.headding1 != blank %}
          <div id="faq_headding1" class="faq_headding1 ct--faq-container-headding1 faq_headding ct_active">
            {{ section.settings.headding1 }}
          </div>
        {% endif %}
        {% if section.settings.headding2 != blank %}
          <div id="faq_headding2" class="faq_headding2 ct--faq-container-headding2 faq_headding">
            {{ section.settings.headding2 }}
          </div>
        {% endif %}
        {% if section.settings.headding3 != blank %}
          <div id="faq_headding3" class="faq_headding3 ct--faq-container-headding3 faq_headding">
            {{ section.settings.headding3 }}
          </div>
        {% endif %}
        {% if section.settings.headding4 != blank %}
          <div id="faq_headding4" class="faq_headding4 ct--faq-container-headding4 faq_headding">
            {{ section.settings.headding4 }}
          </div>
        {% endif %}
        {% if section.settings.headding5 != blank %}
          <div id="faq_headding5" class="faq_headding5 ct--faq-container-headding5 faq_headding">
            {{ section.settings.headding5 }}
          </div>
        {% endif %}
        {% if section.settings.headding6 != blank %}
          <div id="faq_headding6" class="faq_headding6 ct--faq-container-headding6 faq_headding">
            {{ section.settings.headding6 }}
          </div>
        {% endif %}
        {% if section.settings.headding7 != blank %}
          <div id="faq_headding7" class="faq_headding7 ct--faq-container-headding7 faq_headding">
            {{ section.settings.headding7 }}
          </div>
        {% endif %}
        {% comment %}
          {% if section.settings.headding8 != blank and product.metafields.custom.product_faq_s_heading != blank %}
          <div id="faq_headding8" class="faq_headding8 ct--faq-container-headding8 faq_headding">{{ section.settings.headding8 }}</div>
          {% endif %}
        {% endcomment %}
      </div>
      <div class="ct-faq-box">
        {% for block in section.blocks %}
          <div id="" for="{{ block.settings.cid }}" class="ct-faq-container-title {% if forloop.index0 == 0 %} ct_active {% endif %}">
            <div class="ct--faq-container-title">{{ block.settings.Ctitle }}</div>
            <div class="ct-faq-container-options">
              {% if block.settings.Htitle1 != blank %}
                <div class="ct--faq-potions-main">
                  <div class="ct--faq-potions-title">
                    <div class="ct--faq-potions">{{ block.settings.Htitle1 }}</div>
                    {{ 'icon-faq-plus.svg' | inline_asset_content }}
                    </div>
                  <div class="ct-faq-answer">{{ block.settings.answer1 }}</div>
                </div>
              {% endif %}
              {% if block.settings.Htitle2 != blank %}
                <div class="ct--faq-potions-main">
                  <div class="ct--faq-potions-title">
                    <div class="ct--faq-potions">{{ block.settings.Htitle2 }}</div>
                    {{ 'icon-faq-plus.svg' | inline_asset_content }}
                  </div>
                  <div class="ct-faq-answer">{{ block.settings.answer2 }}</div>
                </div>
              {% endif %}
              {% if block.settings.Htitle3 != blank %}
                <div class="ct--faq-potions-main">
                  <div class="ct--faq-potions-title">
                    <div class="ct--faq-potions">{{ block.settings.Htitle3 }}</div>
                    {{ 'icon-faq-plus.svg' | inline_asset_content }}
                  </div>
                  <div class="ct-faq-answer">{{ block.settings.answer3 }}</div>
                </div>
              {% endif %}
              {% if block.settings.Htitle4 != blank %}
                <div class="ct--faq-potions-main">
                  <div class="ct--faq-potions-title">
                    <div class="ct--faq-potions">{{ block.settings.Htitle4 }}</div>
                    {{ 'icon-faq-plus.svg' | inline_asset_content }}
                  </div>
                  <div class="ct-faq-answer">{{ block.settings.answer4 }}</div>
                </div>
              {% endif %}
              {% if block.settings.Htitle5 != blank %}
                <div class="ct--faq-potions-main">
                  <div class="ct--faq-potions-title">
                    <div class="ct--faq-potions">{{ block.settings.Htitle5 }}</div>
                    {{ 'icon-faq-plus.svg' | inline_asset_content }}
                  </div>
                  <div class="ct-faq-answer">{{ block.settings.answer5 }}</div>
                </div>
              {% endif %}
              {% if block.settings.Htitle6 != blank %}
                <div class="ct--faq-potions-main">
                  <div class="ct--faq-potions-title">
                    <div class="ct--faq-potions">{{ block.settings.Htitle6 }}</div>
                    {{ 'icon-faq-plus.svg' | inline_asset_content }}
                  </div>
                  <div class="ct-faq-answer">{{ block.settings.answer6 }}</div>
                </div>
              {% endif %}
              {% if block.settings.Htitle7 != blank %}
                <div class="ct--faq-potions-main">
                  <div class="ct--faq-potions-title">
                    <div class="ct--faq-potions">{{ block.settings.Htitle7 }}</div>
                    {{ 'icon-faq-plus.svg' | inline_asset_content }}
                  </div>
                  <div class="ct-faq-answer">{{ block.settings.answer7 }}</div>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $('.ct--faq-container-title').click(function () {
      $('.ct--faq-container-title').not(this).parent().removeClass('active');
      $(this).parent().toggleClass('active');
    });

    $('.ct--faq-potions-title').click(function () {
      $('.ct--faq-potions-title').not(this).parent().removeClass('active');
      $(this).parent().toggleClass('active');
    });

    jQuery('.ct-faq-headding-box .faq_headding').click(function () {
        jQuery('.ct-faq-headding-box .faq_headding').removeClass( 'ct_active');
        jQuery(this).addClass('ct_active');
        const id = jQuery(this).attr('id');
        jQuery('.ct-faq-box .ct-faq-container-title').each(function () {
            var side_id = jQuery(this).attr('for');
            if (id == side_id) {
            jQuery('.ct-faq-box .ct-faq-container-title').removeClass('ct_active');
            jQuery(this).addClass('ct_active');
            }
        });
    });
  });
</script>

